<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_dark_card"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/set_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Biology Chapter 5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/source_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ From PDF"
                android:textSize="12sp"
                android:textColor="#B0BEC5"
                android:background="@drawable/gradient_dark_button"
                android:backgroundTint="#424242"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/set_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key concepts and definitions"
            android:textSize="14sp"
            android:textColor="#B0BEC5"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Footer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/card_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 cards"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 20, 2025"
                android:textSize="12sp"
                android:textColor="#B0BEC5" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
