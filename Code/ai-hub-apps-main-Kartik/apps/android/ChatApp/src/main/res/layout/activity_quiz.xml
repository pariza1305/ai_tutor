<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_dark_background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_dark_card"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:titleTextColor="@android:color/white"
        app:title="ðŸ“ Quiz Generator"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Setup Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/setup_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/setup_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setup Quiz"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select PDF and configure quiz settings"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="16dp" />

                    <!-- View Quiz History Button -->
                    <Button
                        android:id="@+id/view_quiz_history_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š View Previous Quizzes"
                        android:textSize="14sp"
                        android:backgroundTint="@android:color/holo_purple"
                        android:layout_marginBottom="24dp"
                        style="?attr/materialButtonOutlinedStyle" />

                    <!-- Select PDF Button -->
                    <Button
                        android:id="@+id/select_pdf_button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="ðŸ“„ Select PDF Document"
                        android:textSize="16sp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:layout_marginBottom="16dp" />

                    <!-- PDF Name Display -->
                    <TextView
                        android:id="@+id/pdf_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No PDF selected"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:padding="12dp"
                        android:background="#E0F7E0"
                        android:visibility="gone"
                        android:layout_marginBottom="16dp" />

                    <!-- Weak Topics Info -->
                    <TextView
                        android:id="@+id/weak_topics_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="@android:color/holo_orange_dark"
                        android:padding="12dp"
                        android:background="#FFF3E0"
                        android:visibility="gone"
                        android:layout_marginBottom="24dp" />

                    <!-- Difficulty Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Difficulty"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/difficulty_chips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:checkedChip="@+id/chip_medium"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_easy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Easy"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_hard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hard"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Number of Questions -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Questions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/number_chips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:checkedChip="@+id/chip_5"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Generate Quiz Button -->
                    <Button
                        android:id="@+id/generate_quiz_button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Generate Quiz"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:enabled="false" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quiz Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/quiz_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/quiz_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Score Display -->
                    <TextView
                        android:id="@+id/score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score: 0/0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginBottom="16dp" />

                    <!-- Question Text -->
                    <TextView
                        android:id="@+id/question_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question will appear here"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Options Radio Group -->
                    <RadioGroup
                        android:id="@+id/options_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">
                        <!-- Options will be added dynamically -->
                    </RadioGroup>

                    <!-- Submit Answer Button -->
                    <Button
                        android:id="@+id/submit_answer_button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Submit Answer"
                        android:textSize="16sp"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:layout_marginBottom="12dp" />

                    <!-- Next Question Button -->
                    <Button
                        android:id="@+id/next_question_button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Next Question"
                        android:textSize="16sp"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:visibility="gone" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>
    </ScrollView>

</LinearLayout>
