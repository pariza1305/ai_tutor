<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_dark_background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_dark_card"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:title="Generate from PDF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Instructions -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_dark_card"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“„ AI-Powered Flashcards"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload a PDF and AI will automatically create flashcards to help you study the material."
                        android:textSize="14sp"
                        android:textColor="#B0BEC5" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Set Title -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Flashcard Set Title"
                app:boxStrokeColor="@android:color/white"
                app:hintTextColor="@android:color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/set_title_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PDF Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select PDF Document"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/select_pdf_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ðŸ“„ Choose PDF File"
                android:textSize="16sp"
                android:background="@drawable/gradient_dark_button"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/pdf_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:visibility="gone"
                android:layout_marginBottom="20dp" />

            <!-- Progress -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="true"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Processing..."
                android:textSize="14sp"
                android:textColor="#B0BEC5"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginBottom="20dp" />

            <!-- Generate Button -->
            <Button
                android:id="@+id/generate_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="âœ¨ Generate Flashcards"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/gradient_dark_button"
                android:textColor="@android:color/white"
                android:enabled="false" />

            <!-- Info Box -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_dark_card"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Tips"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ AI will generate ~10 flashcards\nâ€¢ Works best with educational PDFs\nâ€¢ Processing may take 1-2 minutes"
                        android:textSize="14sp"
                        android:textColor="#B0BEC5"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
